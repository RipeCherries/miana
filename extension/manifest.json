{
  "manifest_version": 3,
  "name": "Miana",
  "version": "1.0",
  "description": "Плагин, превращающий Кинопоиск в бесплатный онлайн-кинотеатр.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.kinopoisk.ru/*"],
      "js": ["content.js"]
    }
  ],
  "homepage_url": "https://github.com/RipeCherries/miana"
}